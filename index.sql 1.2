-- 3. THE QUERIES

-- INNER JOIN
SELECT 'Inner' AS type, e.name, d.dept_name
FROM Employees e
INNER JOIN Departments d ON e.dept_id = d.dept_id;

-- LEFT JOIN
SELECT 'Left' AS type, e.name, d.dept_name
FROM Employees e
LEFT JOIN Departments d ON e.dept_id = d.dept_id;

-- RIGHT JOIN
SELECT 'Right' AS type, e.name, d.dept_name
FROM Employees e
RIGHT JOIN Departments d ON e.dept_id = d.dept_id;

-- FULL JOIN (MySQL Workaround using UNION)
SELECT 'Full' AS type, e.name, d.dept_name
FROM Employees e
LEFT JOIN Departments d ON e.dept_id = d.dept_id
UNION
SELECT 'Full' AS type, e.name, d.dept_name
FROM Employees e
RIGHT JOIN Departments d ON e.dept_id = d.dept_id;

-- CROSS JOIN
SELECT 'Cross' AS type, e.name, d.dept_name
FROM Employees e
CROSS JOIN Departments d;
